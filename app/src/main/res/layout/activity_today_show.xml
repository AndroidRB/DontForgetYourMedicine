<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeaderSecondary"
    android:orientation="horizontal"
    android:padding="15dp">


    <ImageButton
        android:id="@+id/imgAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_alarm_on_white_48dp" />

    <TextView
        android:id="@+id/todayMedicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgAlarm"
        android:layout_toEndOf="@+id/imgAlarm"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="@string/medic_name" />


    <TextView
        android:id="@+id/tdyOnEvery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/todayMedicName"
        android:layout_toRightOf="@+id/imgAlarm"
        android:layout_toEndOf="@+id/imgAlarm"
        android:textColor="@color/colorBackgroundLight"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tdyRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/todayMedicName"
        android:layout_toRightOf="@+id/tdyOnEvery"
        android:layout_toEndOf="@+id/tdyOnEvery"
        android:textColor="@color/colorBackgroundLight"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/tdyUntil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/todayMedicName"
        android:layout_toRightOf="@+id/tdyRepeat"
        android:layout_toEndOf="@+id/tdyRepeat"
        android:textColor="@color/colorBackgroundLight"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tdyEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/todayMedicName"
        android:layout_toRightOf="@+id/tdyUntil"
        android:layout_toEndOf="@+id/tdyUntil"
        android:textColor="@color/colorBackgroundLight"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />

    <ImageButton
        android:id="@+id/btnStopAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_clear_black_36dp"
        android:backgroundTint="@color/colorRed"
        tools:targetApi="lollipop" />


</RelativeLayout>